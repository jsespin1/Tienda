<%= stylesheet_link_tag    'sessions', media: 'all', 'data-turbolinks-track' => true %>

<h2 class='User_Header'>Bienvenido, <%=@current_user.username%> ! </h2>

<div class="profile-nav">
  
  <%= render :partial => "profilenav" %>

</div>


<div class="my-account">

    <h2>Editar Cuenta</h2>


          <%= form_for(:user, :url => {:controller => 'admin', :action => 'update'}, :html => {:class => "form_for_sign"}) do |f| %>
            <p class="info-container"> <%= t 'admin.information.name' %> <%= f.text_field :nombre, :class => "text-field"%> </p>
            <p class="info-container"> <%= t 'admin.information.lastname' %> <%= f.text_field :apellido, :class => "text-field"%> </p>
            <p class="info-container"> <%= t 'admin.information.adress' %> <%= f.text_field :direccion, :class => "text-field"%> </p>
            <p class="info-container"> <%= t 'admin.information.area' %> <%= f.text_field :comuna, :class => "text-field"%> </p>
            <p class="info-container"> <%= t 'admin.information.city' %> <%= f.text_field :pais, :class => "text-field"%> </p>
            <p class="info-container"> <%= t 'admin.account.administrator' %><%= f.check_box :admin%> </p>
            <p class="info-container"> <%= t 'admin.information.block' %><%= f.check_box :bloqueado%> </p>
            <%= f.hidden_field :user_id, :value => @user.id %>
            <%= f.submit "Actualizar", :class => "submit" %>
          <% end %>



  </div>