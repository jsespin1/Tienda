<%= stylesheet_link_tag    'editar_catalogo', media: 'all', 'data-turbolinks-track' => true %>

<div class="profile-nav">
  
  <%= render :partial => "profilenav" %>

</div>

<div class="my-account">
  <div class ="contenedor_titulo">
    <h2>Editar Catalogo</h2>
    <%= button_to 'Agregar productos', {:controller => "admin", :action => "agregar_producto"} , :method=>:post  %>

  </div>
  

  <div class="contenedor_catalogo">
  <%@productos.each do |p| %>
  

    <li class = "contenedor_producto">
      <a class = "imagen">
        <%if p.imagen && p.imagen != ""%>
        <%=image_tag(p.imagen, :class => "product-draw")%>
        <%else%>
        <%=image_tag("no_image.png", :class => "product-draw")%>
        <%end%>
        <span class = "nombre_producto">Nombre Producto: <%=p.nombre%></span>
        <span class = "precio_producto">Precio Producto: <%=p.precio%></span>
        <span class = "descripcion_producto">Descripci√≥n: <%=p.descripcion%></span>
        

      </a>

    </li>
  

  <div class ="contenedor_botones">
   
   <%= button_to 'Editar', {:controller => "admin", :action => "editar_producto", :prod_id => p.id} , :method=>:post  %>
   <%= button_to "Eliminar", {:controller => "admin", :action => "eliminar_producto", :prod_id => p.id }, :method => :delete %>
    
  </div>
  
  <%end%>

  </div>


</div>

