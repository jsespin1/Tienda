<%= stylesheet_link_tag    'sessions', media: 'all', 'data-turbolinks-track' => true %>

<h2 class='User_Header'>Bienvenido, <%=@current_user.username%> ! </h2>


<% @page_title = "User | Profile" %>
<div class="profile_form">


  <div class="profile-nav">

  	<%= render :partial => "admin/profilenav" %>


  </div>

  <div class="my-account">

  	<h2><%= t 'admin.account.edit' %></h2>

  	<div class="overview">
  		<div class="user-info">
          <%= form_for(:user, :url => {:controller => 'admin', :action => 'update_contrasena'}, :html => {:id => "formulario_cambiar_contrasena", :class => "form_for_sign"}) do |f| %>
            <p class="info-container"> <%= t 'admin.security.new' %> <%= f.password_field :password, :class => "text-field"%> </p>
            <p class="info-container"> <%= t 'admin.security.confirm' %> <%= f.password_field :password_confirmation, :class => "text-field"%> </p>
            <%= f.submit "Actualizar", :class => "submit" %>
          <% end %>

  		</div>


  	</div>


  </div>



</div>