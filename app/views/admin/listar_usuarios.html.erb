
<h2 class='User_Header'>Bienvenido, <%=@current_user.username%> ! </h2>

<div class="profile-nav">
    
  	<%= render :partial => "profilenav" %>


</div>

<div class="my-account">

<h2>Usuarios</h2>

	<div class="lista_usuarios">
		<table border="1">
			<tr>
				<th><%= t 'admin.information.name' %></th>
				<th><%= t 'admin.information.lastname' %></th>
				<th><%= t 'admin.information.mail' %></th>
				<th>ID</th>
				<th>Admin</th>
				<th><%= t 'admin.information.adress' %></th>
				<th><%= t 'admin.information.area' %></th>
				<th><%= t 'admin.information.city' %></th>
				<th><%= t 'admin.information.block' %></th>
			</tr>
			
			<% @all_users.each do |user| %>
				<tr>
		    	<td> <%= link_to user.nombre, admin_edit_path(:user_id => user.id) %></td>
		    	<td> <%= user.apellido%></td> 
		    	<td> <%= user.email%> </td>
		    	<td> <%= user.id%> </td>
		    	<td> <% if user.admin %> Si <% else %> No <%end%></td>	
		    	<td> <%= user.direccion%> </td>	 
		    	<td> <%= user.comuna%> </td>
		    	<td> <%= user.pais%> </td>	
		    	<td> <% if user.bloqueado %> Si <% else %> No <%end%></td>	 
		    	</tr> 
			<% end %>	
		</table>
	</div>
</div>