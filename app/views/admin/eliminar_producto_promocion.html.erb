<div class="my-account">
   <h2>Quitar Producto a: <%=@promo.nombre%></h2>

   <%= form_for(:producto, :url => {:controller => 'admin', :action => 'quitar_producto_promocion'}, :html => {:class => "form_for_sign"}) do |f| %>
      Seleccione un producto: 
            <select name="producto_id">
              <%if @productos_promocion %>
              <%@productos_promocion.each do |p| %>
              <option value=<%=p.id%>><%=p.nombre%></option>
              
              <%end%>
              <%= f.hidden_field :prom_id, :value => @promo.id %>
              <%= f.submit :Eliminar, :class => "submit" %>
              <%end%> 
            </select>
          
          
          <% end %>


</div>