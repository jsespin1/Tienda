<%= stylesheet_link_tag    'users', media: 'all', 'data-turbolinks-track' => true %>

<% @page_title = "UserAuth | Login" -%>
<div class= "Sign_Form">
  <h2 class="crear_cuenta">Log in</h2>
  <%= form_for(:session, :url => {:controller => 'sessions', :action => 'login_attempt'}, :html => {:class => "form_for_sign"}) do |f| %>
    <p class="info-container">Username or Email <%= f.text_field :username_or_email, :class => "text-field" %></p> 
    <p class="info-container">Password <%= f.password_field :login_password, :class => "text-field" %></p> 
    <%= f.submit :Login, :class => "submit" %>
  <% end %>
</div>



<div class="signup-container">

	<% if session[:user_id]==nil %>
	
			<%= button_to "Suscribirse", new_user_path,
              					:class => 'btn', :method => :get %>
        
    <% end %>
	

</div>