<!DOCTYPE html>
<html>
<head>
  <title>Tienda</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <main>
    <% if !flash.empty? %>
     <div id="flash_messages">
        <% flash.each do |key, value| %>
          <%= content_tag(:div, value, :class => "flash #{key}") %>
        <% end %>
     </div>
    <% end %>

    <%= render 'shared/navbar' %>

    <%= yield %>
  </main>
</body>
</html>
